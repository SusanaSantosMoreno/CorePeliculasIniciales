@model List<Genero>
    
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Generos:</h5>
        <ul class="list-group list-group-flush">
            @foreach(Genero genero in Model) {
                <li class="list-group-item">
                    <a class="text-dark" asp-action="Index" asp-controller="Peliculas" 
                       asp-route-idGenero="@genero.IdGenero">@genero.Descripcion</a>
                </li>
            }
        </ul>
    </div>
</div>